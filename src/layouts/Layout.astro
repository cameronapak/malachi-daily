---
import "@fontsource/inconsolata/900.css"; // Specify weight

interface Props {
	title: string;
	description?: string;
}

const isDebugModeEnabled = Astro.url.searchParams.get('debug');

const { title, description = 'The daily notification with an eternal purpose. Join thousands of Jesus followers memorizing Scripture together. Learn one Bible verse and its context per week.' } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-gray-800">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
		<!-- https://web.dev/learn/pwa/web-app-manifest -->
		<meta name="theme-color" x-bind:content="isDarkMode ? '#1f2937' : '#FFFFFF'">
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href={isDebugModeEnabled ? "/site.webmanifest?debug=true" : "/site.webmanifest"}>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link type="text/partytown" rel="preconnect" href="https://fonts.googleapis.com">
		<link type="text/partytown" rel="preconnect" href="https://fonts.gstatic.com" crossorigin>	
		<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,700;1,700&display=swap" rel="stylesheet">
		<style is:global>
			.font-scripture {
				font-family: "Inconsolata";
				word-spacing: -4px;
				letter-spacing: normal;
				@apply text-4xl max-sm:text-3xl;
			}

			body {
				@apply max-sm:overflow-x-hidden;
			}

			.font-scripture-serif {
				font-family: 'IBM Plex Mono', monospace;
				font-style: italic;
				word-spacing: -8px;
				letter-spacing: -2px;
				@apply text-4xl max-sm:text-3xl;
			}

			[x-cloak] {
				@apply hidden;
			}

			.dock-verse-day-scrubber {
				@apply max-sm:mt-0 max-sm:w-auto max-sm:fixed max-sm:bottom-0 max-sm:left-0 max-sm:right-0 max-sm:p-4 max-sm:z-20 max-sm:bg-gray-100 max-sm:shadow-sm max-sm:border-t-[1px] max-sm:border-gray-300 max-sm:mx-0;
			}
		</style>
		<script>
			if ('serviceWorker' in navigator) {
				navigator
					.serviceWorker
					.register('/service-worker.js')
			}
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>
